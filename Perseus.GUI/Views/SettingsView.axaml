          </StackPanel>
        </StackPanel>
      </Border>

      <!-- System Information -->
      <Border Background="#EDF2F7" 
              CornerRadius="8" 
              Padding="20">
        <StackPanel Spacing="12">
          <TextBlock Text="InformaÃ§Ãµes do Sistema" 
                     FontSize="16" 
