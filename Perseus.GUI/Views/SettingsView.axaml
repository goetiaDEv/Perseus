      </Border>

      <!-- Logging Settings -->
      <Border Background="#F7FAFC" 
              CornerRadius="8" 
              Padding="20">
        <StackPanel Spacing="16">
          <TextBlock Text="ConfiguraÃ§Ãµes de Logging" 
                     FontSize="16" 
                     FontWeight="SemiBold" 
                     Foreground="#2D3748"/>
          
          <Grid ColumnDefinitions="*,*" Spacing="16">
            
            <!-- Enable Logging -->
            <StackPanel Grid.Column="0" Spacing="8">
              <CheckBox Content="Habilitar Logging" 
                        IsChecked="{Binding EnableLogging}"/>
              <TextBlock Text="Ativa o sistema de logs da aplicaÃ§Ã£o" 
                         FontSize="11" 
