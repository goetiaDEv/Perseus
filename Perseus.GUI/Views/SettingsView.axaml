          <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Spacing="16">
            
            <!-- Default Timeout -->
            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4">
              <TextBlock Text="Timeout PadrÃ£o (ms)" FontWeight="SemiBold"/>
              <NumericUpDown Value="{Binding DefaultTimeout}" 
